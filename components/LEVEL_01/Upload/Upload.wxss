/* components/Upload/Upload.wxss */

.upload-single {
  background-color: #f5f5f5;
  border: 2rpx dashed #828282;
  box-sizing: border-box;
  position: relative;
  z-index: 0;
}

.upload-text::before {
  content: '添加图片';
  position: absolute;
  z-index: 1;
  left: 0;
  right: 0;
  color: #828282;
  font-size: 32rpx;
  text-align: center;
}

.bottom-10 {
  width: 160rpx;
  height: 160rpx;
}

.bottom-10::before {
  bottom: 10%;
}

.bottom-20 {
  width: 100%;
  height: 100%;
}

.bottom-20::before {
  bottom: 20%;
}

.upload-icon {
  position: absolute;
  z-index: 1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  flex-direction: column-reverse;
}

.upload-icon::after, .upload-icon::before {
  content: ' ';
  position: absolute;
  z-index: 2;
  left: 0;
  right: 0;
  bottom: 0;
  top: -20%;
  background-color: #828282;
  margin: auto;
  border-radius: 2rpx;
}

.upload-icon::after {
  width: 4rpx;
  height: 50rpx;
}

.upload-icon::before {
  width: 50rpx;
  height: 4rpx;
}

.upload-image {
  width: 100%;
  height: 100%;
  display: block;
}

.upload-more-box {
}

.upload-more-image {
  margin: 0 35rpx 46rpx;
  display: inline-block;
  vertical-align: middle;
  box-sizing: border-box;
  width: 160rpx;
  height: 160rpx;
  position: relative;
  z-index: 0;
}

.upload-more-icon {
  position: absolute;
  z-index: 1;
  top: -15rpx;
  right: -15rpx;
  background-color: #fff;
  border-radius: 50%;
}

.loading-shadow {
  position: absolute;
  z-index: 5;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.2);
  color: #fff;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-shadow::before {
  content: ' ';
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 120rpx;
  height: 120rpx;
  margin: auto;
  background-color: rgba(0, 0, 0, .4);
  border-radius: 50%;
}
