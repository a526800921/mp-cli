@import '/assets/wxss/iconfont.wxss';
@import '/assets/wxss/active.wxss';

.offline-box {
  position: fixed;
  z-index: 2222;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #333;
}

.icon-offline {
  font-size: 100rpx;
  margin-top: -300rpx;
  color: #666;
}

.offline-text {
  margin-top: 60rpx;
}

.offline-btn {
  margin-top: 60rpx;
  line-height: 1;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
}
