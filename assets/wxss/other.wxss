/**
 * 单行文本溢出省略号 
  */

.text-overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/**
 * 多行文本溢出省略号 
  */

.text-overflow-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/**
 * 列表单项遮罩，用于事件委托设置dataset
  */

.delegation-shadow {
  position: relative;
  z-index: 0;
}

.delegation-shadow::after {
  content: ' ';
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}